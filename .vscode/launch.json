{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for Xdebug",
            "type": "php",
            "request": "launch",
            "port": 9003,
            "stopOnEntry": false,
            "pathMappings": {
                "/opt/drupal/web/sites/default/files/civicrm/ext": "${workspaceFolder}/volumes/civicrm-extensions",
                "/opt/drupal/web/sites/default/modules": "${workspaceFolder}/volumes/drupal-modules",
                "/opt/drupal/web/sites/default/themes": "${workspaceFolder}/volumes/drupal-themes"
            },
            "ignore": [
                "**/vendor/**/*.php"
            ],
            "skipFiles": [
                "/opt/drupal/web/index.php",
                "/opt/drupal/core/**/*.php",
                "/opt/drupal/web/modules/contrib/**/*.php"
            ]
        }
    ]
}